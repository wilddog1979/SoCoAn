<?xml version="1.0" encoding="UTF-8"?>
<Language xmlns="http://eaSTars.com/SoCoAn/lang">

	<!-- FOR TESTS ONLY!!! -->

	<LiteralType id="TestAnnotation" literal="@testannotation"/>

	<ComplexType id="Annotation" processor="aggregating">
		<StartNode type="Separator" occurrence="ZeroOrOne">
			<Node type="TestAnnotation"/>
		</StartNode>
	</ComplexType>

	<!-- 4.2 Primitive Types and Values -->

	<ComplexType id="FloatingPointType" processor="aggregating">
		<StartNode type="keyword_float"/>
		<StartNode type="keyword_double"/>
	</ComplexType>

	<ComplexType id="IntegralType" processor="aggregating">
		<StartNode type="keyword_byte"/>
		<StartNode type="keyword_short"/>
		<StartNode type="keyword_int"/>
		<StartNode type="keyword_long"/>
		<StartNode type="keyword_char"/>
	</ComplexType>

	<ComplexType id="NumericType" processor="aggregating">
		<StartNode type="IntegralType"/>
		<StartNode type="FloatingPointType"/>
	</ComplexType>

	<ComplexType id="PrimitiveType" processor="aggregating">
		<StartNode type="Annotation" occurrence="ZeroOrMore">
			<Node type="Separator">
				<NextNode ref="NumericType"/>
				<NextNode ref="keyword_boolean"/>
			</Node>
		</StartNode>
		<StartNode id="NumericType" type="NumericType"/>
		<StartNode id="keyword_boolean" type="keyword_boolean"/>
	</ComplexType>

	<!-- 4.3 Reference Types and Values -->
	
	<Include file="ReferenceTypeAndValues.xml"/>

	<!-- 4.1 The Kinds of Types and Values -->
	
	<ComplexType id="Type" processor="aggregating">
		<StartNode type="PrimitiveType"/>
		<StartNode type="ReferenceType"/>
	</ComplexType>
	
	<!-- 4.4 Type Variables -->
	
	<ComplexType id="AdditionalBound" processor="aggregating">
		<StartNode type="Separator" occurrence="ZeroOrOne" sequence="Order">
			<Node type="and"/>
			<Node type="Separator" occurrence="ZeroOrOne"/>
			<Node type="InterfaceType"/>
		</StartNode>
	</ComplexType>
	
	<ComplexType id="TypeBound" processor="aggregating">
		<StartNode type="Separator" occurrence="ZeroOrOne">
			<Node type="keyword_extends" sequence="Order">
				<Node type="Separator"/>
				<Node type="TypeVariable"/>
			</Node>
			<Node type="keyword_extends" sequence="Order">
				<Node type="Separator"/>
				<Node type="ClassOrInterfaceType"/>
				<Node type="Separator"/>
				<Node type="AdditionalBound" occurrence="ZeroOrMore"/>
			</Node>
		</StartNode>
	</ComplexType>
	
	<ComplexType id="TypeParameterModifier"  processor="aggregating">
		<StartNode type="Annotation">
			<Node type="Separator" occurrence="ZeroOrOne"/>
		</StartNode>
	</ComplexType>
	
	<ComplexType id="TypeParameter" processor="aggregating">
		<StartNode type="TypeParameterModifier" occurrence="ZeroOrMore" sequence="Order">
			<Node type="Identifier"/>
			<Node type="TypeBound" occurrence="ZeroOrOne"/>
		</StartNode>
	</ComplexType>
</Language>
